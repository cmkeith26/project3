<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="0, 1, 2, 3"
    tools:context=".MyActivity"><!--End TableLayout values for width, height, padding-->


    <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@color/orange_cream"
                android:gravity="right"
                android:text="@string/zero"
                android:textSize="70sp"/><!--End declaring values for textView1 color, onClick, placement, width/height values-->
    </TableRow><!--End TableRow1-->

    <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@color/dusk_blue"
            android:contentDescription="@string/ac"
            android:minHeight="70dip"
            android:onClick="goAC"
            android:text="@string/ac"/><!--End declaring values for button1 ("AC" button), color, onClick, width/height values-->

        <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/percent"
                android:onClick="goOperator"
                android:text="@string/percent"/><!--End declaring values for button2 ("%" button), onClick, width/height values-->

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/div"
                android:onClick="goOperator"
                android:text="@string/div" /><!--End declaring values for button3 ("/" button), onClick, width/height values-->

    </TableRow><!--End TableRow2-->

    <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/seven"
                android:minHeight="70dip"
                android:minWidth="70dp"
                android:onClick="goOperand"
                android:text="@string/seven" /><!--End declaring values for button4 ("7" button), onClick, width/height values-->

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/eight"
                android:onClick="goOperand"
                android:text="@string/eight"/><!--End declaring values for button5 ("8" button), onClick, width/height values-->

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/nine"
                android:onClick="goOperand"
                android:text="@string/nine"/><!--End declaring values for button6 ("9" button), onClick, width/height values-->

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/mult"
                android:onClick="goOperator"
                android:text="@string/mult"/><!--End declaring values for button7 ("x" button), onClick, width/height values-->
    </TableRow><!--End TableRow3-->

    <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/four"
                android:minHeight="70dip"
                android:minWidth="70dp"
                android:onClick="goOperand"
                android:text="@string/four"/><!--End declaring values for button8 ("4" button), onClick, width/height values-->

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/five"
                android:onClick="goOperand"
                android:text="@string/five"/><!--End declaring values for button9 ("5" button), onClick, width/height values-->

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/six"
                android:onClick="goOperand"
                android:text="@string/six"/><!--End declaring values for button10 ("6" button), onClick, width/height values-->

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/subtract"
                android:onClick="goOperator"
                android:text="@string/subtract"/><!--End declaring values for button11 (- button), onClick, width/height values-->
    </TableRow><!--End TableRow4-->

    <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/one"
                android:minHeight="70dip"
                android:minWidth="70dp"
                android:onClick="goOperand"
                android:text="@string/one"/><!--End declaring values for button12 ("1" button), onClick, width/height values-->

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/two"
                android:onClick="goOperand"
                android:text="@string/two"/><!--End declaring values for button13 ("2" button), onClick, width/height values-->

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/three"
                android:onClick="goOperand"
                android:text="@string/three"/><!--End declaring values for button14 ("3" button), onClick, width/height values-->

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:contentDescription="@string/add"
                android:onClick="goOperator"
                android:text="@string/add"/><!--End declaring values for button15 (+ button), onClick, width/height values-->
    </TableRow><!--End TableRow5-->

    <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dip"
                android:layout_span="2"
                android:contentDescription="@string/zero"
                android:onClick="goOperand"
                android:text="@string/zero"/><!--End declaring values for button16 (0 button), onClick, width/height values-->

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="@color/dusk_blue"
                android:contentDescription="@string/equal"
                android:minHeight="70dip"
                android:onClick="goCompute"
                android:text="@string/equal"/><!--End declaring values for button17 (= button), color, onClick, width/height values-->
    </TableRow><!--End table row6-->
    </TableLayout><!-- End TabletLayout-->
